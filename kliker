from nicegui import ui,app
licznik = 0
def dodaj():
    try:
       global licznik
       licznik += 1
       wynik = ui.label(f"{licznik}")
    except ValueError:
        wynik.text = "Błąd: podaj liczby"
       
ui.label("kliker")

wynik = ui.label(f"{licznik}")
ui.button("Dodaj", on_click=dodaj)


ui.run(reload=False)